<% method_name = (@band.persisted? ? "PATCH" : "POST") %>
<% action_url = (@band.persisted? ? band_url(@band) : bands_url) %>

<form action='<%= action_url %>' method='POST'>
  <input type='hidden' name='_method' value='<%= method_name %>'>
  <%= auth_token %>

  <label>Band Name</label>
  <input type='text' name='band[name]' value='<%= @band.name %>'>

  <input type='submit' value='Submit'>
</form>
