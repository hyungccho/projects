<form method="POST", action="<%= cat_rental_requests_url %>">

  <label for="cat_name">Cat's Name</label>
  <select name="cat_rental_request[cat_id]">
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <label for="cat_start_date">Start Date</label>
  <input name="cat_rental_request[start_date]" type="date">

  <label for="cat_end_date">End Date</label>
  <input name="cat_rental_request[end_date]" type="date">

  <input type="submit" value="Rent this cat!">
</form>
