<% action_url = @cat.persisted? ? cat_url(@cat) : cats_url %>
<% method = @cat.persisted? ? "PATCH" : "POST" %>
<% submit_text = @cat.persisted? ? "Fix my cat!" : "Build my cat!" %>

<form method="POST", action="<%= action_url %>">
  <input type="hidden", name="_method", value="<%= method %>">

  <label for="cat_name">Name</label>
  <input type="text", name="cat[name]", value="<%= @cat.name %>">
  <br>

  <label>Sex</label>
  <br>
  <label for="cat_sex_m">Male</label>
  <input type="radio", name="cat[sex]", value="M", <%= "checked" if @cat.sex == "M" %>>
  <label for="cat_sex_f">Female</label>
  <input type="radio", name="cat[sex]", value="F", <%= "checked" if @cat.sex == "F" %>>
  <br>

  <label for="cat_color">Color</label>
  <select name="cat[color]">
    <% Cat::COLORS.each do |color| %>
      <option value="<%= color %>"
        <%= "selected" if @cat.color == color %>>
        <%= color %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="cat_birth_date">Birth Date</label>
  <input name="cat[birth_date]" type="date" value="<%= @cat.birth_date %>">
  <br>

  <label for="cat_description">Description</label>
  <input name="cat[description]" type="textarea" value="<%= @cat.description %>">
  <br>

  <input type="submit" value="<%= submit_text %>">
</form>
