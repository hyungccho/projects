<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= render partial: 'shared/errors' if flash.now[:errors]%>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <h1 class="cool-font">Sign Up</h1>

      <form action="/users" method="POST" class="top-sm-buffer">
        <%= auth_token %>

        <div class="form-group">
          <label for="username">Username</label>
          <input type="text"
                 name="user[username]"
                 id="username"
                 class="form-control"
                 value="<%= @user.username %>">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password"
                 name="user[password]"
                 id="password"
                 class="form-control">
        </div>

        <input type="submit" value="Sign Up" class="btn btn-primary">
      </form>

    </div>
  </div>
</div>
