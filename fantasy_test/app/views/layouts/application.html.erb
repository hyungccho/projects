<!DOCTYPE html>
<html>
<head>
  <title>FantasyTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed"
              data-toggle="collapse"
              data-target="#collapse-menu"
              aria-expanded="false">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="collapse-menu">
      <ul class="nav navbar-nav">
        <li><%= link_to "Mock Fantasy", new_session_url %></li>
        <% if current_user %>
          <li><%= link_to "Profile", user_url(current_user) %></li>
          <li><%= link_to "Search Players", teams_url %></li>
          <li><%= link_to "Leagues", leagues_url %></li>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="navbar-btn"><%= button_to "Log Out", session_url, method: :delete, class: "btn btn-default navbar-btn" %></li>
        <% else %>
          <li class="navbar-btn"><%= button_to "Log In", new_session_url, method: :get, class: "btn btn-default navbar-btn" %></li>
        <% end %>
      </ul>
    </div>

  </div>
</nav>

<%= yield %>
<br>
<br>

</body>
</html>
